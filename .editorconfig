root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
indent_brace_style = K&R
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120
quote_type = "single"
curly_bracket_next_line = false

[*.{md,toml,json,yml,yaml}]
indent_size = 2
quote_type = "double"
